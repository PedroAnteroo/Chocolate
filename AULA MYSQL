CREATE TABLE tb_cliente ( -- COMANDO PRA CRIAR TABELA 
CPF VARCHAR (11),
NOME VARCHAR (100),
ENDERECO VARCHAR (150),
ENDERECO2 VARCHAR (150),
BAIRRO VARCHAR (50),
CIDADE VARCHAR (50),
ESTADO VARCHAR (2),
CEP VARCHAR (8), 
IDADE INT, 
SEXO VARCHAR (1),
LIMITE_CREDITO FLOAT,
VOLUME_COMPRA FLOAT,
PRIMEIRA_COMPRA BOOL );

CREATE TABLE tb_cliente_v2 (  -- COMANDO PRA CRIAR TABELA 2
CPF VARCHAR (11),
NOME VARCHAR (100),
ENDERECO VARCHAR (150),
ENDERECO2 VARCHAR (150),
BAIRRO VARCHAR (50),
CIDADE VARCHAR (50),
ESTADO VARCHAR (2),
CEP VARCHAR (8), 
IDADE INT, 
SEXO VARCHAR (1),
LIMITE_CREDITO FLOAT,
VOLUME_COMPRA FLOAT,
PRIMEIRA_COMPRA BOOLEAN );

CREATE TABLE tbproduto -- COMANDO PRA CRIAR TABELA 3
(
PRODUTO VARCHAR (30),
NOME VARCHAR (100),
EMBALAGEM VARCHAR (50),
TAMANHO VARCHAR (50),
SABOR VARCHAR (50),
PRECO_LISTA FLOAT 
);
INSERT INTO tbproduto(  -- inserir valores na tabela 
PRODUTO,
NOME,
EMBALAGEM,
TAMANHO ,
SABOR ,
PRECO_LISTA) VALUES (
'349076','Doritos','Pacote','300 g','Nacho',12);

SELECT * FROM tbproduto  -- mostrar a tabla

SELECT * FROM tbproduto where PRODUTO = 349076 -- mostrar uma linha 

SELECT * FROM tbproduto where PRODUTO LIKE = '%Pacote%' -- filtrar linhas 

UPDATE tbproduto SET EMBALAGEM = 'Pacote' where PRODUTO = '349076'; -- editar uma linha 

DELETE FROM tbproduto where PRODUTO = '349076'; -- deletar uma linha 
